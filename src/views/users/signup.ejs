<!DOCTYPE html>
<html lang="en">
<head>

  <%- include("../partials/head") -%>
    <title>Images</title>
</head>
<body>
    <%- include("../partials/navigation") %>

<% if (user.email === process.env.EMAIL_ADMIN) { %>
<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registrar Cuenta
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Contraseña" value="">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirmar contraseña" value="">
          </div>
          <button class="btn btn-primary btn-block">
            Registrar Usuario
          </button>
        </form>
      </div>  
    </div>
  </div>
</div>
<% } else { %>
  <%- include("../404") %>
<% } %>
</body>
</html>